#! /bin/bash

if [ -z "$BASH" ] || [ "$BASH" != "/bin/bash" ]
then
	cat >&2 <<EOF
	extargsparse4sh only running in bash mode
	please use bash to call this script
EOF
	exit 4
fi

read -r -d '' EXTARGSPARSE <<EXTEOF

%EXTARGSPARSE%

EXTEOF

parse_command_line()
{
	local _jsonparse=$1
    local _parsestr
    local _vermode=""
    local _i
	shift

    if [ -n "$EXTARGSPARSE_LOGLEVEL" ] && [ $EXTARGSPARSE_LOGLEVEL -ge 2 ]
        then
        echo "_jsonparse($_jsonparse) args($@)cnt($#) output($EXTARGSPARSE)" >&2
        _vermode="-"
        for _i in $(seq 1 $EXTARGSPARSE_LOGLEVEL)
        do
        	_vermode="${_vermode}v"
        done
    fi
	_parsestr=$(echo "$_jsonparse" | python -c "$EXTARGSPARSE" $_vermode --caption "$0"  parse -- "$@" )
    if [ -n "$EXTARGSPARSE_LOGLEVEL" ] && [ $EXTARGSPARSE_LOGLEVEL -ge 2 ]
       then
	   echo "_parsestr ($_parsestr)" >&2
    fi
	eval "$_parsestr" 2>/dev/null
	return
}

extargsparse4sh_version()
{
	echo "%EXTARGSPARSE4SH_VERSION%"
	return
}